<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"

    android:background="#ff86ffa3">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:id="@+id/button"
            android:onClick="one"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="2"
            android:id="@+id/button2" android:onClick="two" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="3"
            android:id="@+id/button3" android:onClick="three" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:text="      "
            android:id="@+id/textView2" />
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="ADD"
            android:id="@+id/button10" android:onClick="add"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="SUB"
            android:id="@+id/button11" android:onClick="sub"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearLayout2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="4"
            android:id="@+id/button4" android:onClick="four"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="5"
            android:id="@+id/button5" android:onClick="five"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="6"
            android:id="@+id/button6" android:onClick="six"/>

        <TextView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:text="      "
            android:id="@+id/textView3" android:onClick=""/>

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="MUL"
            android:id="@+id/button13" android:onClick="mul"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="DIV"
            android:id="@+id/button16" android:onClick="div"/>



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Calculator"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_alignEnd="@+id/linearLayout2"
        android:id="@+id/linearLayout3">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="7"
            android:id="@+id/button7" android:onClick="seven"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="8"
            android:id="@+id/button8" android:onClick="eight"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="9"
            android:id="@+id/button9" android:onClick="nine"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textView4" />

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="DOT"
            android:id="@+id/button14" android:onClick="dot"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="CLEAR"
            android:id="@+id/button15" android:onClick="clear"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_alignEnd="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="0"
            android:id="@+id/button12"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:onClick="zero"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EQUALS"
            android:id="@+id/button17"
            android:onClick="equals"
            android:layout_below="@+id/button12"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


</RelativeLayout>
